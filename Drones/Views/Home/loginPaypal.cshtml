
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>loginPaypal</title>
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/Paypal.css">
</head>
<body>
    <div class="container">
        <div class="paypal-logo">
            <img class="img" src="~/Imagenes/logo-Paypal.png" alt="PayPal Logo">
        </div>
        <div class="container">
            <label for="correo">Correo Electrónico:</label>
            <input type="email" id="correo" name="correo" class="input-padrom" required>
            <label for="contrasena">Contraseña:</label>
            <input type="password" id="contrasena" name="contrasena" class="input-padrom" required>
        </div>
        <div class="paypal-button">
            <button id="payButton" onclick="processPayment()">Pagar con PayPal</button>
        </div>
    </div>
    <script>
         function processPayment() {
             alert("¡Pago realizado con éxito!");
           // Redirecciona al Home
            window.location.href = '@Url.Action("PagarYBorrar", "Home")';
         }
    </script>
</body>
</html>
